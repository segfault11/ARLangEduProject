//------------------------------------------------------------------------------
uniform mat4 P;
uniform mat4 V;
attribute vec3 pos;
//------------------------------------------------------------------------------
void main()
{
    gl_PointSize = 10.0;
    highp vec3 p = pos;
    p.z += 1.0;
    p.x *= 10.0;
    p.y *= 10.0;
    p.z *= 10.0;
    
    
    highp vec4 h = P*V*vec4(p.x, p.y, p.z, 1.0);

    gl_Position = vec4(h.y, -h.x, h.z, h.w);
}
