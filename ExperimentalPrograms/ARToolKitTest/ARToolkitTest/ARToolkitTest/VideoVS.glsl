//------------------------------------------------------------------------------
attribute vec2 pos;
varying highp vec2 tc;
//------------------------------------------------------------------------------
void main()
{
    tc.x = (pos.x + 1.0)/2.0;
    tc.y = 1.0 - (pos.y + 1.0)/2.0;
    
    gl_Position = vec4(pos.x, pos.y, 0.0, 1.0);
}
